<!--pages/detail-video/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>
<view>
    <view class="video-wrapper"><video src="{{mvUrl.url}}" class="video" id="mvVideo"></video></view>

    <view class="info">
        <view class="title">{{mvDetails.name}}</view>
        <view class="desc">{{mvDetails.artistName}} - </view>
        <view class="other">
            <text class="play-count">{{format.formatCount(mvDetails.playCount) + '次播放'}} - {{mvDetails.publishTime}}</text>
        </view>
    </view>

    <view class="related">
        <view class="related-title"><text>推荐视频</text></view>
        <view wx:for="{{relatedVideo}}" wx:key="vid">
            <video-card-v1 item="{{item}}" bindtap="handleClick" data-item="{{item}}"></video-card-v1>
        </view>
    </view>
</view>